{
  "manifest_version": 3,
  "name": "Demand Viewer",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://nldcasognlt3p.corp.capgemini.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "api.js",
        "ui.js",
        "logic.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
